<main class="row g-3">
    <div class="py-3">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div>
                    {{#if href}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{else}}
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>

        </div>
        {{/with}}
    </div>
    {{!-- ---------------------------- --}}
    <h2>{{header}}</h2>
    <div class="col-12">
        <div class="row g-2">
            {{!-- ============= --}}
            <div class="col-8">
                {{#with contacts_data}}
                <h3>{{title}}</h3>
                {{!-- ========== --}}
                <div class="my-3">
                    {{#each buttons}}
                    {{#if isPrimary}}
                    <button class="btn btn-warning">{{text}}</button>
                    {{else}}
                    <button class="btn btn-outline-warning">{{text}}</button>
                    {{/if}}
                    {{/each}}
                </div>
                {{!-- ========= --}}
                <div>
                    {{#with form}}
                    <div class="row">
                        {{#with input}}
                        <div class="col-6">
                            {{#with surname}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with name}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with phone}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>

                        <div class="col-6">
                            {{#with email}}
                            <label class="form-label">{{label}}</label>
                            <input class="form-control" placeholder="{{placeholder}}">
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                        </div>


                        {{/with}}
                    </div>
                    <hr>

                    <div>
                        {{#each switch}}
                        <div class="form-check form-switch">
                            <label class="form-check-label">{{text}}</label>
                            {{#if isActive}}
                            <input type="checkbox" class="form-check-input" checked>
                            {{else}}
                            <input type="checkbox" class="form-check-input">
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>




                    {{/with}}
                </div>

                {{/with}}

            </div>
            {{!-- ============= --}}

            <div class="col-4 card">
                <div class="card-body">
                    {{#each action_block}}
                    <div class="mb-2">
                        {{#if isSuccess}}
                        <button class="btn btn-success">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button class="btn btn-danger">{{text}}</button>
                        {{/if}}
                        {{#if isInfo}}
                        <button class="btn btn-info">{{text}}</button>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{!-- ---------------------------- --}}

            <div class="col-8 mt-4">
                <div class="row">
                    {{#with delivery}}
                    <h3>{{title}}</h3>
                    <div class="card">
                        <div class="card-body">
                            {{#each select}}
                            <div class="col-6">
                                <div class="form-label">{{label}}</div>


                                <div>
                                    <select class="form-select">
                                        {{#each options}}

                                        <option name="city" value="{{value}}" placeholder="{{placeholder}}">{{text}}
                                        </option>
                                        {{/each}}
                                    </select>

                                </div>

                            </div>
                            {{/each}}
                        </div>

                    </div>
                    {{/with}}
                </div>

            </div>
            {{!-- ========================== --}}


        </div>
    </div>




    {{!-- ---------------------------- --}}

    <div class="col-12">
        <div class="row">
            {{#each footer}}
            <nav class="col-2">
                <div class="nav">
                    <div class="nav-item">
                        {{#each this}}
                        <div>
                            {{#if @last}}
                            <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                            {{else}}
                            <a href="{{link}}" class="nav-link">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </nav>
            {{/each}}
        </div>

    </div>


</main>