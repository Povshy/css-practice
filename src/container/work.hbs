{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main class="ps-5">
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>



                        <div class="p-3">
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (still working)
                            {{/if}}
                        </div>



                        <div class="p-3">
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>



                        <div>
                            <strong>
                                Projects ({{projectAmount}})
                            </strong>
                        </div>



                        <ul class="p-3">
                            {{#each projects}}
                            <li class="p-3">
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>

                                <br>
                                <div>
                                    <p>{{about}}</p>
                                </div>
                                <br>

                                <div>
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>
                                <br>

                                <div>
                                    <ul>
                                        {{#each stacks}}
                                        <li>
                                            {{name}}
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>



                                <div>
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>


                                <div>
                                    <ul>
                                        {{#each awards}}
                                        <li>{{name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                            <hr>
                            {{/each}}
                        </ul>



                    </li>
                    {{/each}}
                </ul>
            </div>

        </section>
    </main>
    {{/with}}

</div>

