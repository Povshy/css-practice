<main class="row">
    {{!-- ----------nav-------------- --}}
    <div class="py-3">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div>
                    {{#if href}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{else}}
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>

        </div>
        {{/with}}
    </div>
    {{!-- ---------------------------- --}}

    <div class="col-8">
        {{#with formBlock}}
        <h2>{{header}}</h2>
        <p>{{rating.text}}: {{rating.value}}</p>
        {{/with}}
    </div>
    <hr>




    {{!-- --------foooter---------- --}}

    <div class="col-12">
        <div class="row">
            {{#each footer}}
            <nav class="col-2">
                <div class="nav">
                    <div class="nav-item">
                        {{#each this}}
                        <div>
                            {{#if @last}}
                            <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                            {{else}}
                            <a href="{{link}}" class="nav-link">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </nav>
            {{/each}}
        </div>

    </div>
    {{!-- --------------------- --}}


</main>