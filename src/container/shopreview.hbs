<main class="row">
    {{!-- ----------nav-------------- --}}
    <div class="py-3">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div>
                    {{#if href}}
                    <a href="{{link}}" class="nav-link">{{text}}</a>
                    {{else}}
                    <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                    {{/if}}
                </div>
                {{/each}}
            </div>

        </div>
        {{/with}}
    </div>
    {{!-- ---------------------------- --}}
    <div class="col-12">
        <div class="row">
            {{#with formBlock}}
            {{!-- =================== --}}
            <div class="col-8 my-4">
                <div class="row">
                    <h2>{{header}}</h2>
                    <p>{{rating.title}}: {{rating.value}}</p>


                    <div class="my-4">
                        {{#with actionBlock}}
                        <div class="nav nav-tabs my-4">
                            {{#each tabs}}
                            <div class="nav-item col-4">
                                <a href="#" class="nav-link {{#if isActive}}active{{/if}}">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                        <hr>

                        <div class="card my-4">
                            {{#with report}}
                            <div class="card-body">
                                <div class="my-2">{{title}}</div>
                                <div><a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a></div>
                            </div>
                            {{/with}}
                        </div>
                        <hr>
                        {{/with}}
                    </div>

                    <div class="col-12 my-4">
                        {{#with feedbackBlock}}
                        <h3 class="my-3">{{title}}</h3>
                        <div class="row">
                            {{#each buttons}}
                            <div class="col-4">
                                {{#if isWarning}}
                                <a href="{{link}}" class="btn btn-warning">{{text}}</a>
                                {{/if}}
                                {{#if isSuccess}}
                                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>

                </div>

            </div>
            {{!-- =================== --}}
            <div class="col-4">
                {{#with goodsInfo}}

                <div class="card my-2">
                    <div class="card-body">
                        <img src="{{photo}}" alt="note">
                        <h5 class="mt-4">{{name}}</h5>
                    </div>
                </div>

                <div class="card my-2">
                    <div class="card-body">
                        <h5>{{price}}</h5>
                        {{#if inMarket}}
                        <p>Є в наявності</p>
                        {{/if}}

                        <div>
                            {{#each buttons}}
                            <div class="my-2">
                                {{#if isPrimary}}
                                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                {{/if}}
                                {{#if isSecondary}}
                                <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="card my-2">
                    {{#with seller}}
                    <div class="card-body">{{title}}: <b>{{value}}</b></div>
                    {{/with}}
                </div>


                {{/with}}
            </div>
            {{!-- =================== --}}
            {{/with}}
        </div>

    </div>
    <hr>
    {{!-- --------------------------- --}}
    <div class="col-12 mt-4 card">
        {{#each reviewList}}
        <div class="card-body">
            <div>

                <div class="card">

                    <div class="card-header">
                        <h5>{{title.userName}}</h5>
                        <p>{{title.caption}}</p>
                        <p>{{title.date}}</p>
                    </div>

                    {{#with reviewBody}}
                    <div class="card-body">
                        <span>{{seller.title}}: {{seller.value}}</span>
                        <span>{{rating.title}}: {{rating.value}}</span>

                        <div>
                            {{#each text}}
                            <p>{{this}}</p>
                            {{/each}}
                        </div>

                        <div class="my-3">
                            {{#with advantages}}
                            <p><b>{{title}}:</b></p>
                            <p>{{text}}</p>
                            {{/with}}
                        </div>

                        <div class="my-3">
                            {{#with disadvantages}}
                            <p><b>{{title}}:</b></p>
                            <p>{{text}}</p>
                            {{/with}}
                        </div>

                        <div>
                            {{#each images}}
                            <img src="{{this}}" alt="photo">
                            {{/each}}
                        </div>

                    </div>
                    {{/with}}

                </div>

                <div>
                    {{#with reviewBody}}
                    {{#each coments}}
                    <div class="card ms-5 me-2 my-2">
                        <div class="card-body">
                            <h5>{{userName}}</h5>
                            <p>{{date}}</p>
                            <p>{{text}}</p>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

            </div>
        </div>
        {{/each}}
    </div>
    {{!-- --------------------------- --}}


    <div class="col-12 my-4 card text-bg-success">
        {{#with service}}
        <div class="card-body row">
            <h2 class="text-center">{{title}}</h2>
            <p class="text-center">description</p>
            <div class="my-3">
                {{#each buttons}}
                <div class="text-center">
                    <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                </div>

                {{/each}}
            </div>
        </div>
        {{/with}}

    </div>
    <hr>


    {{!-- --------foooter---------- --}}

    <div class="col-12">
        <div class="row">
            {{#each footer}}
            <nav class="col-2">
                <div class="nav">
                    <div class="nav-item">
                        {{#each this}}
                        <div>
                            {{#if @last}}
                            <a href="{{link}}" class="nav-link disabled">{{text}}</a>
                            {{else}}
                            <a href="{{link}}" class="nav-link">{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </nav>
            {{/each}}
        </div>

    </div>
    {{!-- --------------------- --}}


</main>