<div>
    <h1>{{name}}</h1>
    <p><em>({{description}})</em></p>
    <div>{{category}}</div>
    <div>
        <h3><u> Price: {{price}}</u></h3>
    </div>
    <hr>
    <dir>
        {{#with features}}
        <h3>Features:</h3>
        <hr>
        <div>
            <h4><u><em>Processor: </em></u></h4>
            {{#with processor}}
            <div>{{brand}}, {{model}}, {{speed}}, cores: {{cores}}, {{cache}}</div>
            {{/with}}
        </div>
        <br>
        <div>
            <h4><u><em>Memory: </em></u></h4>
            {{#with memory}}
            <div>Type: {{type}}</div>
            <div>Size: {{size}}</div>
            <div>Speed: {{speed}}</div>
            {{/with}}
        </div>

        <br>
        <div>
            <h4><u><em>Storage: </em></u></h4>
            {{#with storage}}
            <div>Type: {{type}}</div>
            <div>Size: {{size}}</div>
            {{/with}}
        </div>

        <br>
        <div>
            <h4><u><em>Display: </em></u></h4>
            {{#with display}}
            <div>Size: {{size}}</div>
            <div>Resolution: {{resolution}}</div>
            <div>Technology: {{technology}}</div>
            <div>Color space: {{color_space}}</div>
            <div>Brightness: {{brightness}}</div>
            <div>Refresh rate: {{refresh_rate}}</div>
            {{/with}}
        </div>

        <br>
        <div>
            <h4><u><em>Graphics: </em></u></h4>
            {{#with graphics}}
            <div>Brand: {{brand}}</div>
            <div>Model: {{model}}</div>
            <div>Memory: {{memory}}</div>
            {{/with}}
        </div>

        <br>
        <div>
            <h4><u><em>Ports: </em></u></h4>
            {{#each ports}}
            <div><b>{{type}}</b></div>
            <div>Count: {{count}}</div>

            <div>
                {{#each features}}
                <ul>
                    <li>{{this}}</li>
                </ul>
                {{/each}}
            </div>
            {{/each}}
        </div>

        <br>
        <div>
            <h4><u><em>Battery: </em></u></h4>
            {{#with battery}}
            <div>Type: {{type}}</div>
            <div>Capacity: {{capacity}}</div>
            <div>Life: {{life}}</div>
            {{/with}}
        </div>
        <br>
        <div>
            <h4><u><em>Weight:</em></u> {{weight}}</h4>
        </div>
        <br>

        <div>
            <h4><u><em>Dimensions: </em></u></h4>
            {{#with dimensions}}
            <div>Height: {{height}}</div>
            <div>Width: {{width}}</div>
            <div>Depth: {{depth}}</div>
            {{/with}}
        </div>
        <br>
        <div>
            <h4><u><em>Operating system:</em></u> {{operating_system}}</h4>
        </div>

        <br>
        <div>
            <h4><u><em>Accessories: </em></u></h4>
            {{#each accessories}}
            <div>{{name}}</div>
            <div><em>Price: {{price}}</em></div>
            <br>
            {{/each}}
        </div>

        <hr>

        {{/with}}
    </dir>

    <br>
</div>